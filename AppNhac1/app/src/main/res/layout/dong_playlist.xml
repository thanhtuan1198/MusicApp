<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgbackgrounplaylist"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"/>
    <View

        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/iconplaylist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/imgbackgrounplaylist"
        android:layout_alignLeft="@+id/imgbackgrounplaylist"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tenplaylist"
        android:layout_toRightOf="@+id/iconplaylist"
        android:layout_alignBottom="@+id/iconplaylist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:textSize="20sp"
        android:maxLines="1"
        android:text="aaaaaaaaaa"
        android:textColor="#ffff"
        />

</RelativeLayout>