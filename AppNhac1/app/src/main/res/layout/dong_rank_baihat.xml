<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/hinhbaihathot"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tenbaihathot"
        android:layout_toRightOf="@+id/hinhbaihathot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Ten bai hat"
        android:textColor="#000000"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="230dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/casihaihathot"
        android:layout_toRightOf="@+id/hinhbaihathot"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Ca si"
        android:layout_below="@+id/tenbaihathot"
        android:layout_width="230dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iconluotthich"
        android:src="@drawable/iconlove"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />

</RelativeLayout>